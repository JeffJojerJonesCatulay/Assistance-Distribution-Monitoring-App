<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assistancedistributionmonitoringapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_resize"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_resize"
        android:supportsRtl="true"
        android:theme="@style/Theme.AssistanceDistributionMonitoringApp">
        <activity android:name=".About"></activity>
        <activity
            android:name=".ViewCompleteAdmin"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ViewIncomingAdmin"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ViewResidentAdmin"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".UpdateProfile" />
        <activity android:name=".tempAdding" />
        <activity android:name=".QRReader" />
        <activity android:name=".QRGenerator" />
        <activity
            android:name=".HomeScreenUserComplete"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".HomeScreenUserIncoming"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".HomeScreenUserResident"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".HomeScreenAdminComplete"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".HomeScreenAdminIncoming"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".HomeScreenAdminResident"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".addAdmin" />
        <activity android:name=".adminLogIn" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".HomeScreenUser" />
        <activity android:name=".signUp" />
        <activity android:name=".logIn" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>