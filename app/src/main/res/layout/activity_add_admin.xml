<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:src="@drawable/brgy_logo_only" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/admin_bg"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Admin Information"
            android:textSize="16sp"
            />


        <EditText
            android:id="@+id/fullNameInput_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:drawableStart="@drawable/ic_baseline_contact_page_24"
            />


        <EditText
            android:id="@+id/addressInput_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:drawableStart="@drawable/ic_baseline_add_location_alt_24"
            />

        <EditText
            android:id="@+id/position_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Position"
            android:drawableStart="@drawable/ic_baseline_contact_page_24"
            />

        <EditText
            android:id="@+id/contactInput_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact"
            android:inputType="number"
            android:drawableStart="@drawable/ic_baseline_contact_phone_24"
            />

        <EditText
            android:id="@+id/emailInput_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:drawableStart="@drawable/ic_baseline_email_24"
            />

        <EditText
            android:id="@+id/pass_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            />

        <EditText
            android:id="@+id/passwordConfirmationInput_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            />

        <CheckBox
            android:id="@+id/showPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Password"
            />

        <Button
            android:id="@+id/registerBtn_admin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Register"
            android:background="#009688"
            />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>

</ScrollView>